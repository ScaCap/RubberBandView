<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="droid.capital.scalable.rubberbandview.MainActivity"
    android:orientation="vertical">

    <EditText
        android:id="@+id/inputMaxSelection"
        android:layout_width="match_parent"
        android:hint="Enter max value here:"
        android:inputType="number"
        android:imeOptions="actionDone"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/selectedValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <capital.scalable.droid.rubberbandview.RubberBandView
        android:id="@+id/valueSelector"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
